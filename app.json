{
    "name": "FlexIt Analytics on Heroku",
    "description": "Business Intelligence, Built for People",
    "keywords": [
        "business intelligence",
        "analytics",
        "reporting",
        "viz",
        "dashboard",
        "charting",
        "flexit"
    ],
    "logo": "https://flexitanalytics.com/wp-content/uploads/2018/05/Flex-X-small.png",
    "repository": "https://github.com/ataft/flexit-deploy",
    "success_url": "/#home",
    "addons": [
        {
            "plan": "heroku-postgresql"
        }
    ],
    "scripts": {
    },
    "buildpacks": [
        {
            "url": "https://github.com/ph3nx/heroku-binary-buildpack.git",
            "url": "https://buildpack-registry.s3.amazonaws.com/buildpacks/heroku/google-chrome.tgz"
        }
    ],
    "env": {
        "PROTOCOL": {
            "description": "Heroku has SSL enabled",
            "value": "https"
        },
        "CHROMIUM_PATH": {
            "description": "Chrome buildpack install location for pdf/png download",
            "value": "/app/.apt/usr/bin/google-chrome"
        },
        "HEROKU_APP_NAME": {
            "required": true
        }
    }
}